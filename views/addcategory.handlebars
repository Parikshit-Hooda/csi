{{#if errors}}
    {{#each errors}}
      <div class="card-panel red lighten-3">{{msg}}</div>
      {{/each}}
{{/if}}

<div class='col s10 m8 l6 offset-s1 offset-l3 offset m-2'>
<h2 id='ls-head' class='center'>Add Category</h2>
<div class='row'>
<form method="post" action='/categories/add' enctype="multipart/form-data">
<div class="input-field col s12">
  <input placeholder = 'Add Category' id='addcategory' type='text' class='validate' name='addcategory' required>
  <label for='addcategory'>Add Category</label>
</div>
<button id='addcategory-btn' class='blue btn waves-effect waves-light' type='submit' name='addcat'>Add</button>
