{{#if errors}}
    {{#each errors}}
      <div class="card-panel red lighten-3">{{msg}}</div>
      {{/each}}
{{/if}}

<div class='row'>
  <div class='col s10 m8 l6 offset-s1 offset-l3 offset m-2'>
<h2 id='ls-head' class='center'>Account Login</h2>
<div class='row'>
<form method="post" action="/users/login">
  <div class="input-field col s12">
    <input placeholder="Username" id='username' type="text" class="validate" name='username' required>
    <label for='username'>Username</label>
  </div>
  <br />
  <div class="input-field col s12">
    <input placeholder="Password" id='password' type="password" class="validate" name='password' required>
    <label for='password'>Password</label>
  </div>
  <button id='login-btn' class="blue btn waves-effect waves-light" type="#" name="login">Login</button>
</form>
</div>
</div>
</div>
