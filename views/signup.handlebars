{{#if errors}}
    {{#each errors}}
      <div class="card-panel red lighten-3">{{msg}}</div>
      {{/each}}
{{/if}}

<div class='row'>
  <div class='col s10 m8 l6 offset-s1 offset-l3 offset m-2'>
    <h2 id='ls-head' class='center'>Account Signup</h2>
    <div class='row'>
<form method="post" action="/users/signup">
  <div class="input-field col s12">
    <label for='name'>Name</label>
    <input type="text" id="name" class="validate" placeholder="Name" name="name" required>
  </div>
  <br />
  <div class="input-field col s12">
    <label for='username'>Username</label>
    <input type="text" id="username" class="validate" placeholder="Username" name="username" required>
  </div>
  <br />
  <div class="input-field col s12">
    <label for='email'>Email</label>
    <input type="email" id="email" class="validate" placeholder="Email" name="email" required>
  </div>
  <br />
  <div class="input-field col s12">
    <label for='password'>Password</label>
    <input type="password" id="password" class="validate" placeholder="Password" name="password" required>
  </div>
  <br />
  <div class="input-field col s12">
    <label for='password2'>Confirm Password</label>
    <input type="password" id="password2" class="validate" placeholder="Password" name="password2" required>
  </div>
  <button name='signup' id='signup-btn' type="submit" class="blue btn waves-effect waves-light">Sign up</button>
</form>
</div>
</div>
</div>
