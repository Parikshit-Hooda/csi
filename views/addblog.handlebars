<h1>Add Blog</h1>
<ul class='errors'>
   {{#if errors}}
   {{#each errors}}
   <li class='card-panel red lighten-3'> {{msg}} </li>
   {{/each}}
   {{/if}}
</ul>
<form method='post' action='add' type='application/x-www-form-urlencoded'>
   <div class="input-field col s6">
      <input placeholder="Title" id="title" type="text" class="validate" name='title' required>
      <label for="title">Title of Blog</label>
   </div>
   <div class="input-field col s12">
      <select required>
         <option value="" disabled selected>Choose your option</option>          
        {{#each cats}}
          <option value='{{cat}}' name='{{cat}}'>{{cat}}</option>
          {{/each}}
      </select>
      <label for='cat'>
          </div>
   <div class="input-field col s12">
      <textarea id="textarea-body" class="materialize-textarea" required></textarea>
      <label for="textarea-body">Write blog here</label>
   </div>
   <button id='addpost-btn' class="blue btn waves-effect waves-light" type="submit" name="addblog">Post</button>
</form>