{{#if errors}}
    {{#each errors}}
      <div class="card-panel red lighten-3">{{msg}}</div>
      {{/each}}
{{/if}}

<div class='row'>
  <div class='col s10 m8 l6 offset-s1 offset-l3 offset m-2'>
<h2 id='ls-head' class='center'>New Members Registration</h2>
<div class='row'>
<form method="post" action="/new-mem-reg">
  <div class="input-field col s12">
    <input placeholder="Full Name" id='fullnamenmr' type="text" class="validate" name='fullnamenmr' required>
    <label for='fullnamenmr'>Full Name</label>
  </div>
  <br />
  <div class="input-field col s12">
    <input placeholder="Email" id='emailnmr' type="email" class="validate" name='emailnmr' required>
    <label for='emailnmr'>E-mail</label>
  </div>
  <br />
  <div class="input-field col s12">
    <input placeholder="Phone Number" id='phonenumbernmr' type="tel" class="validate" name='phonenumbernmr' required>
    <label for='phonenumbernmr'>Phone Number</label>
  </div>
  <br />
  <div class="input-field col s12">
    <input placeholder="Branch" id='branchnmr' type="text" class="validate" name='branchnmr' required>
    <label for='branchnmr'>Branch</label>
  </div>
  <button id='reset-btn' class="blue btn waves-effect waves-light" type="reset">Reset Form</button>
  <button id='reg-btn' class="blue btn waves-effect waves-light" type="submit" name="login">Register</button>
</form>
</div>
</div>
</div>
